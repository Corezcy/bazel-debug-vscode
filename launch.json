    "version": "0.2.0",
    "configurations": [
        {
             "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bazel-bin/logsimcore/FawLogSim",
            "args": [
                "--map_dir","/home/core/jiulonghu_faw_v16",
                "--use_sim_time","true", 
                "--logsim_collision_avoid","true", 
                "--scenario","/opt/simulation/testdata/log_scenario.json",
                "--loglevel","0"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}